<?xml version="1.0" encoding="UTF-8"?>
<Context path="/Newspaper_Example_DAO_Maven">
  <!-- Copiare il driver nella directory CATALINA_HOME/lib -->
  <!-- Se lo si mette in WEB-INF/lib non sarà visibile al common class loader usato per il pooling -->
  <!-- in tal caso non si potrà usare il pooler di Tomcat, ma uno esterno da aggiungere all'applicazione -->
  <Resource auth="Container" driverClassName="com.mysql.cj.jdbc.Driver" maxActive="10" maxIdle="5" maxWait="10000" name="jdbc/webdb2" password="webpass" type="javax.sql.DataSource" url="jdbc:mysql://localhost/webdb2?serverTimezone=UTC" username="website"/>
</Context>
